<Window x:Class="ThreadsWpf.OtherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThreadsWpf"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Other Window" Height="141.428" Width="170.816">
    <Grid Background="Beige">
        <Label Content="{Binding Counter, Mode=OneWay}" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="46,20,0,0" VerticalAlignment="Top" Width="75" FontSize="18"/>
        <Button Content="Count" HorizontalAlignment="Left" Margin="46,51,0,0" VerticalAlignment="Top" Width="75" Click="ButtonClick"/>
    </Grid>
</Window>
